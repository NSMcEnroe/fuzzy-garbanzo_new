<h1> All Flights </h1>

<% @flights.each do |flight| %>
  <p>Flight Number: <%= flight.number %></p>
  <p>Airline: <%= flight.airline.name %></p>
  <p>All Passengers: </p>
  <% flight.passengers.each do |passenger| %>
    <p> <%= passenger.name %> </p>
    <%= button_to "Remove Passenger", "flights/passengers/#{passenger.id}", method: :delete, data: {turbo: false} %>
  <% end %>
<% end %>
